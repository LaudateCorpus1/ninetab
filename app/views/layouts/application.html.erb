<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield :title) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
<%= render 'layouts/shim' %>
</head>
<body>

<% if params[:action] == 'home' %>
  <header>
    <div id="homepage-top-container">
      <%= render 'layouts/navigation' %>
      <div id="main-pic"><div id="arrow_left"></div><div id="arrow_right"></div></div>
      <div id="en">&nbsp;<%= link_to 'EN', root_path(locale: '') %></div><div id="cz">&nbsp;<%= link_to 'CZ', root_path(locale: 'cz') %></div>
    </div>      
  </header>
<%= yield %>

<% else %>
  <header>
    <div id="top-container">
      <%= render 'layouts/navigation' %>
      <div id="top-filling"></div>
      <div id="en">&nbsp;<%= link_to 'EN', root_path(locale: '') %></div><div id="cz">&nbsp;<%= link_to 'CZ', root_path(locale: 'cz') %></div>
    </div>
 </header>

  <div id="page-content">
<%= yield %>
  </div>
<% end %>

<%= render 'layouts/footer' %>

<%= debug(params) if Rails.env == 'development' %>
</body>
</html>
