<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield :title) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <link href='http://fonts.googleapis.com/css?family=Titillium+Web:300,800&amp;subset=latin,latin-ext' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag "application" %>

<script type="text/javascript">
  $(window).load(function() {
    $('.flexslider').flexslider({
      directionNav: true,
      prevText: '',
      nextText: ''
    });
  });
</script>  
  <%= csrf_meta_tags %>
<%= render 'layouts/shim' %>
</head>
<body>

<% if params[:action] == 'home' %>
  <header>
    <div id="homepage-top-container">
      <%= render 'layouts/navigation' %>
      <div id="main-pic" class="flexslider">
        <ul class="slides">
          <li>
            <%= image_tag 'tablet.jpg', alt: '' %>
            <div class="slide-caption">
              <h1>TABLET E8</h1>
              <p><%= t(:SLIDE1) %></p>
            </div>
          </li>
          <li>
            <%= image_tag 'tablet.jpg', alt: '' %>
          </li>
          <li>
            <%= image_tag 'tablet.jpg', alt: '' %>
          </li>
        </ul>
      <div id="en">&nbsp;<%= link_to 'EN', '/en' %></div><div id="cz">&nbsp;<%= link_to 'CZ', '/cs' %></div>
    </div>      
  </header>
<%= yield %>

<% else %>
  <header>
    <div id="top-container">
      <%= render 'layouts/navigation' %>
      <div id="top-filling"></div>
      <div id="en">&nbsp;<%= link_to 'EN', '/en' %></div><div id="cz">&nbsp;<%= link_to 'CZ', '/cs' %></div>
    </div>
 </header>

  <div id="page-content">
<%= yield %>
  </div>
<% end %>

<%= render 'layouts/footer' %>

<%= debug(params) if Rails.env == 'development' %>
</body>
</html>
